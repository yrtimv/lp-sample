- var linkItems = ['facebook-official', 'twitter', 'google-plus', 'linkedin']
- var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com']

footer.footer
  .footer__top
    .container
      .footer__title Get in touch
      .footer__links
        each item, key in linkItems
          a.footer__social(href=`https://${linkUrls[key]}` target='_blank')
            i(class=`fa fa-${item}` aria-hidden='true')
              span.hidden=linkItems
      .footer__text Subscribe to our newsletter to stay update with what is new
      form(method='post' action='#')
        .footer__field
          input.footer__input(type='email' placeholder='Email Address')
        button.button(type='submit') Subscribe

  .footer__bottom
    .footer__copy Cssauthor.com &copy; 2014 All Rights Reserved
