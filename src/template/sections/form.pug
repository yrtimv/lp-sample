      h2.title.title__header Get your free facebook analysis now
      .title__text Enter your details below
    .btn-down
      a.arrow-down
        i.fa.fa-angle-down

    .form-container.no-display
      form.form(method='post' action='#')
        button.form__close-button(type='button') x
